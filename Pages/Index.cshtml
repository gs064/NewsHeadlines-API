        function getupdatednews(id) {

            $.ajax({
                type: "GET",
                url: uri + "/" + id,
                contentType: "application/json"
            }).done(function (response) {

                $('#_id').val(response.id);
                $('#_title').val(response.title);
                $('#_content').val(response.content);
                




            });


