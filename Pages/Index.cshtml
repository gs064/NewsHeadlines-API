    <script>
        var uri = 'api/News';

        $(document).ready(function () {
            // Gets all 
            $.getJSON(uri)
                .done(function (data) {

                    $("#HeadlineTemplate").tmpl(data).appendTo("#Headlines");
                });
        });



        function getHeadlines() {

            $.getJSON(uri)
                .done(function (data) {

                    $("#Headlines").text("");

                    $("#HeadlineTemplate").tmpl(data).appendTo("#Headlines");
                });

        }

        function adding() {
            var _title = $('#title').val();
            var _content = $('#content').val();
       



            var news = {
                title: _title,
                content: _content
             


            };

            $.ajax({
                type: "POST",
                url: uri,
                data: JSON.stringify(news),
                contentType: "application/json; charset=utf-8"
            }).done(function (response) {
                $("#result").html("Proccessing Complete");
                getHeadlines();
            }).fail(function (jqXHR, textStatus) {
                $("#result").html("An error occured when adding the news.");
            });




        }





        function updatenews() {
            var _id = parseInt($('#_id').val());
            var _title = $('#_title').val();
            var _content = $('#_content').val();
          


            var news = {
                id: _id,
                title: _title,
                content: _content
              


            };

            $.ajax({
                type: "PUT",
                url: uri + "/" + $('#_id').val(),
                data: JSON.stringify(news),
                contentType: "application/json; charset=utf-8"
            }).done(function (response) {
                $("#resultUpdate").html("Proccessing Complete");
                getHeadlines();
            }).fail(function (jqXHR, textStatus) {
                $("#resultUpdate").html("Something went wrong When updating news");
            });;




        }



        function remove(id) {


            var yes = confirm(" you want to delete this headline?");

            if (yes) {
                $.ajax({
                    type: "DELETE",
                    url: uri + "/" + id,

                }).done(function (response) {

                    getHeadlines();
                });

            }


        }



